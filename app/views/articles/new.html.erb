<section class="container">
  <h1>New Article</h1>

  <%= form_for :article, url: articles_path do |f| %>
    <p>
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </p>

    <p>
      <%= f.label :image_path %><br>
      <%= f.text_field :image_path %>
    </p>
   
    <p>
      <%= f.label :description %><br>
      <%= f.text_area :description %>
    </p>
   
    <p>
      <%= f.submit %>
    </p>
  <% end %>
</section>